{
  "name": "ledgerman",
  "version": "0.7.0",
  "description": "A Cli tool for creating a general ledger from the journal.",
  "main": "lib/index.js",
  "bin": {
    "ldm": "bin/ldm.js"
  },
  "scripts": {
    "test": "mocha --require babel-register spec/**",
    "lint": "souffle",
    "clean": "rimraf lib doc coverage",
    "dist": "babel src -d lib",
    "cov": "nyc --reporter=lcov npm test && open coverage/lcov-report/index.html",
    "prepublish": "npm run clean && npm run dist",
    "demo": "babel-node src/bin/ldm.js --journal samples/journal.yml --chart samples/chart.yml",
    "demo-update": "babel-node src/bin/ldm.js --journal samples/journal.yml --chart samples/chart.yml > samples/ledger.yml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kt3k/ledgerman.git"
  },
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^3.2.5",
    "minimist": "^1.1.0",
    "moment": "^2.11.2"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "babel-register": "^6.5.2",
    "chai": "^1.10.0",
    "esdoc": "^0.4.5",
    "mocha": "^2.1.0",
    "nyc": "^8.3.2",
    "rimraf": "^2.5.2",
    "souffle-cli": "^3.1.0"
  },
  "souffle": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "it"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "nyc": {
    "exclude": [
      "spec"
    ]
  }
}
